<p id="notice"><%= notice %></p>

<h1>Inventory</h1>

<table>
  <thead>
    <tr>
      <th>Product ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity remaining</th>
      <th>Increase</th>
      <th>Decrease</th>
      <th>Rentable</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.quantity_remaining %>/<%= item.quantity_total %></td>
        <td><%= link_to "Increase", "increase_quantity/#{item.id}", :remote => true, :method => :put %></td>
        <td><%= link_to "Decrease", "decrease_quantity/#{item.id}", :remote => true, :method => :put %></td>
        <td><%= item.rentable %></td>
        <td><%= item.price %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

