<%= stylesheet_link_tag 'application', media: 'all' %>

<h1 style="text-align:center; margin-bottom: 2rem;">Rent Item</h1>

<div class="formBody">
  
  <div class="customForm">
  <button type="button" class="btn btn-secondary btn-sm" onclick="history.back();" style="background: grey">Back</button>

    <%= form_for(@rented_item) do |f| %>
      <% if @rented_item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@rented_item.errors.count, "error") %> prohibited this item from being saved:</h2>

          <ul>
          <% @rented_item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

        <%= f.hidden_field :organization_id %>
        <%= f.hidden_field :item_id %>
        <%= f.hidden_field :user_renting %>

      <div class="field">
        <%= f.label :renter_name %><br>
        <%= f.text_field :renter_name %>
      </div>
      <div class="field">
        <%= f.label :phone_number %><br>
        <%= f.text_field :phone_number %>
      </div>
      <div class="field">
        <%= f.label :address %><br>
        <%= f.text_field :address %>
      </div>
      <div class="field">
        <%= f.label :date_rented %><br>
        <%= f.text_field :date_rented %>
      </div>
      <div class="field">
        <%= f.label :return_date %><br>
        <%= f.text_field :return_date %>
      </div>
      <div class="actions", style="margin-top: 13px" >
        <%= f.submit :Submit, class: 'btn btn-secondary'%>
      </div>
    <% end %>
  </div>
</div>



