<p id="notice"><%= notice %></p>

<h1> <%= @organization.name %> Members</h1>

<table class="table table-striped table-hover align-middle table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Admin?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr onclick="location.href='<%= membership_path(member) %>'">
        <td><%= User.find_by_id(member.user).name %></td>
        <td><%= User.find_by_id(member.user).email %></td>
        <td><%= member.admin %></td>
        <td><%= link_to 'Edit', edit_membership_path(member) %></td>
        <td><%= link_to 'Show', member %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @members %>

<br>

<%= link_to 'Back', :back %>