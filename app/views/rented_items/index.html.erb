<p id="notice"><%= notice %></p>

<h1>Listing Rented Items</h1>

<table>
  <thead>
    <tr>
      <th>Organization</th>
      <th>Item</th>
      <th>User renting</th>
      <th>Age</th>
      <th>Date rented</th>
      <th>Return date</th>
      <th>Total Time rented</th>
      <%# Total time rented should probably be moved to the item model along with max rent time %>
      <th>Max rent time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rented_items.each do |rented_item| %>
      <tr>
        <td><%= rented_item.organization %></td>
        <td><%= rented_item.item_id %></td>
        <td><%= rented_item.user_renting %></td>
        <td><%= rented_item.age %></td>
        <td><%= rented_item.date_rented %></td>
        <td><%= rented_item.return_date %></td>
        <td><%= rented_item.time_rented %></td>
        <td><%= rented_item.max_rent_time %></td>
        <td><%= link_to "Return", "return_item/#{rented_item.id}", :remote => true, :method => :put %></td>
        <td><%= link_to 'Show', rented_item %></td>
        <td><%= link_to 'Edit', edit_rented_item_path(rented_item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rented item', new_rented_item_path %>
