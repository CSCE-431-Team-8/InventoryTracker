<p id="notice"><%= notice %></p>

<h1>Listing Rented Items</h1>

<%= form_tag(rented_items_path, method: :get) do %>
  <p> Search for an item </p>
  <%= text_field_tag(:search, params[:search]) %>
  <%= hidden_field_tag(:sort, params[:sort]) %>
  <%= submit_tag ("Search") %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= link_to "Organization", :sort => "organization", :search => params[:search]%></th>
      <th><%= link_to "Item ID", :sort => "item_id", :search => params[:search]%></th>
      <th><%= link_to "User Renting", :sort => "user_renting", :search => params[:search]%></th>
      <th><%= link_to "Age", :sort => "age", :search => params[:search]%></th>
      <th><%= link_to "Date Rented", :sort => "date_rented", :search => params[:search]%></th>
      <th><%= link_to "Return Date", :sort => "return_date", :search => params[:search]%></th>
      <%# <th><%= link_to "Total Time Rented", :sort => "time_rented"%>
      <%# Total time rented should probably be moved to the item model along with max rent time %>
      <%# <th><%= link_to "Max Rent Time", :sort => "max_rent_time"%>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rented_items.each do |rented_item| %>
      <tr>
        <td><%= rented_item.organization %></td>
        <td><%= rented_item.item_id %></td>
        <td><%= rented_item.user_renting %></td>
        <td><%= rented_item.age %></td>
        <td><%= rented_item.date_rented %></td>
        <td><%= rented_item.return_date %></td>
        <%# <td><%= rented_item.time_rented %>
        <%# <td><%= rented_item.max_rent_time %>
        <td><%= link_to "Return", "return_item/#{rented_item.id}", :remote => true, :method => :put %></td>
        <td><%= link_to 'Show', rented_item %></td>
        <td><%= link_to 'Edit', edit_rented_item_path(rented_item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rented item', new_rented_item_path %>
